<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.TaskMapper">
	<select id="getAllTasks" resultType="com.example.demo.entity.Task">
		SELECT id, task FROM tasks ORDER BY id
	</select>
	
	<insert id="insertTask" parameterType="com.example.demo.entity.Task">
		INSERT INTO tasks (task) VALUES (#{task})
	</insert>
	
	<update id="updateTask" parameterType="com.example.demo.entity.Task">
		UPDATE tasks SET task = #{registerString} WHERE id = #{id}
	</update>
	
	<delete id="deleteTaskById" parameterType="com.example.demo.entity.Task">
		DELETE FROM tasks WHERE id = #{id}
	</delete>
</mapper>